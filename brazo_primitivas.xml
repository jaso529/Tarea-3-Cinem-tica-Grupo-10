<mujoco model="brazo_primitivas_debug">

  <compiler angle="radian" autolimits="true"/>

  <default>
    <joint type="hinge" damping="1.0" armature="0.01"/> 
    <position kp="15"/>
    <geom density="1000" rgba="0.8 0.2 0.2 1"/> </default>

  <asset>
    <material name="verde" rgba="0.3 0.6 0.3 1"/>
    <material name="azul" rgba="0.2 0.5 0.8 1"/>
    <material name="gris" rgba="0.6 0.6 0.6 1"/>
  </asset>

  <worldbody>
    <light name="spotlight" mode="targetbodycom" target="base_brazo" pos="0 -1 2"/>

    <body name="base_brazo" pos="0 0 0.1"> <joint name="base_joint" axis="0 0 1" range="-3.14 3.14"/>
      <geom type="cylinder" size="0.05 0.1"/> <body name="link1_brazo" pos="0 0 0.1">
        <joint name="link1_joint" axis="0 1 0" range="-1.57 1.57"/>
        
        <geom type="cylinder" size="0.02 0.1" pos="0.1 0 0" material="verde" axisangle="0 1 0 1.5708"/>

        <body name="link2_brazo" pos="0.2 0 0">
          <joint name="link2_joint" axis="0 1 0" range="-1.57 1.57"/>
          <geom type="cylinder" size="0.02 0.15" pos="0 0 0.15" material="azul"/>
          
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <position name="actuador_base" joint="base_joint"/>
    <position name="actuador_link1" joint="link1_joint"/>
    <position name="actuador_link2" joint="link2_joint"/>
  </actuator>

  <keyframe>
    <key name="home" qpos="0 0 0" ctrl="0 0 0"/>
  </keyframe>

</mujoco>

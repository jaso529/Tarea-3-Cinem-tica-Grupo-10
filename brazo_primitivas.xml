<mujoco model="brazo_primitivas">

  <compiler angle="radian" autolimits="true"/>

  <default>
    <joint type="hinge" damping="1.0" armature="0.01"/> 
    <position kp="20" forcerange="-100 100"/> <geom density="1000"/> </default>

  <default>
    <default class="rot_z"> <joint axis="0 0 1" range="-3.14 3.14"/>
    </default>
    <default class="rot_y"> <joint axis="0 1 0" range="-1.57 1.57"/>
    </default>
  </default>

  <asset>
    <material name="mat_base" rgba="0.8 0.2 0.2 1"/>  <material name="mat_link1" rgba="0.3 0.6 0.3 1"/> <material name="mat_hombro" rgba="0.2 0.5 0.8 1"/> <material name="mat_link2" rgba="0.9 0.4 0.1 1"/> <material name="mat_antebrazo" rgba="0.5 0.2 0.8 1"/> <material name="mat_link3" rgba="0.6 0.6 0.6 1"/> <material name="mat_gripper" rgba="0.8 0.8 0.2 1"/> </asset>

  <worldbody>
    <light name="spotlight" mode="targetbodycom" target="base" pos="0 -2 3"/>

    <body name="base" pos="0 0 0.1"> <joint class="rot_z" name="q0_base"/>
      <geom type="cylinder" size="0.05 0.1" material="mat_base"/> <body name="link1" pos="0 0 0.1">
        <joint class="rot_y" name="q1_link1"/> <geom type="cylinder" size="0.02 0.02" pos="0.02 0 0" material="mat_link1" axisangle="0 1 0 1.5708"/>

        <body name="hombro" pos="0.04 0 0">
          <geom type="cylinder" size="0.03 0.172" pos="0 0 0.172" material="mat_hombro"/>

          <body name="link2" pos="0 0 0.344">
            <joint class="rot_y" name="q2_link2"/> <geom type="cylinder" size="0.02 0.06025" pos="0.06025 0 0" material="mat_l2" axisangle="0 1 0 1.5708"/>

            <body name="antebrazo" pos="0.1205 0 0">
              <joint class="rot_z" name="q3_antebrazo"/> <geom type="cylinder" size="0.03 0.175" pos="0 0 0.175" material="mat_antebrazo"/>

              <body name="link3" pos="0 0 0.35">
                <joint class="rot_y" name="q4_link3"/> <geom type="cylinder" size="0.02 0.055" pos="0.055 0 0" material="mat_l3" axisangle="0 1 0 1.5708"/>

                <body name="gripper" pos="0.11 0 0">
                  <joint class="rot_z" name="q5_gripper"/> <geom type="cylinder" size="0.02 0.075" pos="0 0 0.075" material="mat_gripper"/>
                  
                  <site name="eef" pos="0 0 0.15" size="0.01"/>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <contact>
    <exclude body1="base" body2="link1"/>
    <exclude body1="link1" body2="hombro"/>
    <exclude body1="hombro" body2="link2"/>
    <exclude body1="link2" body2="antebrazo"/>
    <exclude body1="antebrazo" body2="link3"/>
    <exclude body1="link3" body2="gripper"/>
  </contact>

  <actuator>
    <position class="rot_z" name="act_q0_base" joint="q0_base"/>
    <position class="rot_y" name="act_q1_link1" joint="q1_link1"/>
    <position class="rot_y" name="act_q2_link2" joint="q2_link2"/>
    <position class="rot_z" name="act_q3_antebrazo" joint="q3_antebrazo"/>
    <position class="rot_y" name="act_q4_link3" joint="q4_link3"/>
    <position class="rot_z" name="act_q5_gripper" joint="q5_gripper"/>
  </actuator>

  <keyframe>
    <key name="home" qpos="0 0 0 0 0 0" ctrl="0 0 0 0 0 0"/>
  </keyframe>

</mujoco>

<mujoco model="brazo_prueba">

  <compiler meshdir="modelos"/>

  <asset>
    <material name="rojo" rgba="0.8 0.2 0.2 1"/>
    <material name="azul" rgba="0.2 0.5 0.8 1"/>
    <mesh file="base.obj"/>
  </asset>

  <worldbody>
    <light name="spotlight" mode="targetbodycom" target="base_brazo" pos="0 -1 2"/>

    <body name="base_brazo" pos="0 0 0">
      <inertial mass="1.0" pos="0 0 0" diaginertia="0.1 0.1 0.1"/>
      <joint type="hinge" name="base_joint" axis="0 0 1"/>
      <geom type="mesh" mesh="base" material="rojo"/>

      <body name="pieza_prueba" pos="0 0 0.2">
        <inertial mass="0.1" pos="0 0 0" diaginertia="0.01 0.01 0.01"/>
        <joint type="hinge" name="junta_prueba" axis="0 1 0"/> <geom type="sphere" size="0.05" material="azul"/> </body>
    </body>
  </worldbody>

  <actuator>
    <position joint="base_joint" kp="10"/>
    <position joint="junta_prueba" kp="10"/>
  </actuator>

</mujoco>
